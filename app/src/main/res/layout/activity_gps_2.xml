<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/gradient"
    android:id="@+id/gps_root"
    android:layout_height="match_parent">


    <include
        android:id="@+id/gps_app_bar"
        layout="@layout/app_bar"/>


    <TextView
        android:textIsSelectable="true"
        android:id="@+id/latitude_label"
        android:typeface="monospace"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/gps_app_bar"
        android:textStyle="bold"
        android:text="Latitude: "
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textIsSelectable="true"
        android:id="@+id/latitude_val"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="@string/not_available"
        android:layout_alignTop="@id/latitude_label"
        android:layout_alignBottom="@id/latitude_label"
        android:layout_toRightOf="@id/latitude_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textIsSelectable="true"
        android:id="@+id/longitutde_label"
        android:typeface="monospace"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/latitude_label"
        android:textStyle="bold"
        android:text="Longitude: "
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textIsSelectable="true"
        android:id="@+id/longitutde_val"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="@string/not_available"
        android:layout_alignTop="@id/longitutde_label"
        android:layout_alignBottom="@id/longitutde_label"
        android:layout_toRightOf="@id/longitutde_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textIsSelectable="true"
        android:id="@+id/location_label"
        android:typeface="monospace"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/longitutde_label"
        android:textStyle="bold"
        android:text="Location: "
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textIsSelectable="true"
        android:id="@+id/location_val"
        android:textSize="16sp"
        android:lines="4"
        android:textColor="@color/white"
        android:text="@string/not_available"
        android:layout_alignTop="@id/location_label"
        android:layout_toRightOf="@id/location_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <Button
        android:id="@+id/show_map"
        android:text="Show Me On The Map"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="64dp"
        android:layout_below="@id/location_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button

        android:id="@+id/show_police"
        android:text="Show Nearby Police Stations"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/show_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />





</RelativeLayout>